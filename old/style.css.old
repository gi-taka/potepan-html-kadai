html {
  font-size: 14px;
  font-family: 'ヒラギノ角ゴ Pro', 'Hiragino Kaku Gothic Pro', 'メイリオ', 'Meiryo', sans-serif;
  color: #222;
}
.site-header {
    padding-top: 20px;
    padding-bottom: 20px;
    display: inline-flex;
    position: fixed;
    background-color: #fff;
    z-index: 10;
    width: 100%;
}

.site-header-inner {
    display: inline-flex;
}

.contents-tidy {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.content-width {
    max-width: 1140px;
    padding-left: 50px;
    padding-right: 50px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
}

.header-logo-pc {
    width: auto;
    height: 20px
}

.header-nav-list {
    margin-left: 30px;
}

.header-nav-item {
    display: block;
    font-size: 10px;
    padding: 20px 0;
}

span {
    display: block;
    font-weight: bold;
    text-align: center;
}

ul {
    align-items: center;
}

li {
    margin-left: 30px;
    list-style: none;
    text-align: center;
    float: left;
    font-size: 10px;
}

.header-button-outline {
    padding-top: 10px;
}
